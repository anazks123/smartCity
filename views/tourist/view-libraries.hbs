<link rel='stylesheet' href='/stylesheets/user.css' />
<style>
  body {
    background: linear-gradient(90deg, #F2994A, #F2C94C);
  }
</style>

<nav class="navbar navbar-light bg-light mb-5">
  <h1 class="ms-3">Libraries</h1>
</nav>

<div class="container library">
  <div class="row">
    {{#each libraries}}
    <div class="col-4">
      <div class="card p-2">
        <img src="/images/library/{{_id}}.jpg" class="image">
        <div class="container">
          <h4><b>{{libraryName}}</b></h4>
          <h6>{{description}}</h6>
          <h6>{{place}}</h6>
          <h6>{{phone}}</h6>
          <h6>{{email}}</h6>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>